<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blackboardbackground"
    android:orientation="vertical" >

    <Button
        android:id="@+id/new_font_button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="200dp"
        android:background="@drawable/button"
        android:text="@string/new_font"
        android:textColor="@color/white1" />

    <Button
        android:id="@+id/existing_font_button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="260dp"
        android:background="@drawable/button"
        android:text="@string/existing_font"
        android:textColor="@color/white1" />

    <Button
        android:id="@+id/help_button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="320dp"
        android:background="@drawable/button"
        android:text="@string/help"
        android:textColor="@color/white1" />

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="250dp"
        android:layout_height="265dp"
        android:layout_x="30dp"
        android:layout_y="-10dp"
        android:src="@drawable/fontmakertitle" />

</AbsoluteLayout>